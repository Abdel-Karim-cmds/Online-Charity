}

form .fields .input-field {
    display: flex;
    /* width: calc(100% / 3 - 15px); */
    flex-direction: column;
    /* margin: 4px 0; */
}

.second .fields .input-field {
    display: flex;
    width: calc(100% / 3 - 15px);
    flex-direction: column;
    margin: 4px 0;
}

.input-field label {
    font-size: 12px;
    font-weight: 500;
    color: #006b57;
